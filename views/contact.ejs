<style>
/* CSS Variables for Checkbox Styling (Light and Dark Modes) */
:root {
    --accent-color: #0071dc;
    --accent-dark: #005bb5;
    --text-primary: #333333;
    --text-secondary: #666666;
    --bg-checkbox: #ffffff;
    --border-checkbox: #cccccc;
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
    :root {
        --accent-color: #4da8ff;
        --accent-dark: #3b82f6;
        --text-primary: #e0e0e0;
        --text-secondary: #a0a0a0;
        --bg-checkbox: #2c2c2c;
        --border-checkbox: #555555;
    }
}

/* Checkbox Group Styling */
.checkbox-group {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    padding: 10px 0;
}

.checkbox-item {
    display: flex;
    align-items: center;
}

.checkbox-label {
    font-size: 14px;
    color: var(--text-primary);
    margin-left: 10px;
    cursor: pointer;
    transition: color 0.3s ease;
}

.checkbox-item input[type="checkbox"] {
    appearance: none;
    width: 18px;
    height: 18px;
    background-color: var(--bg-checkbox);
    border: 2px solid var(--border-checkbox);
    border-radius: 4px;
    cursor: pointer;
    position: relative;
    transition: background-color 0.3s ease, border-color 0.3s ease;
}

.checkbox-item input[type="checkbox"]:checked {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
}

.checkbox-item input[type="checkbox"]:checked::after {
    content: '\2713';
    font-size: 12px;
    color: #ffffff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.checkbox-item input[type="checkbox"]:hover,
.checkbox-item input[type="checkbox"]:focus {
    border-color: var(--accent-dark);
    outline: none;
}

.checkbox-label:hover {
    color: var(--accent-color);
}

/* Responsive Adjustments */
@media (max-width: 991px) {
    .checkbox-group {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 767px) {
    .checkbox-group {
        grid-template-columns: 1fr;
    }
    .checkbox-label {
        font-size: 12px;
    }
    .checkbox-item input[type="checkbox"] {
        width: 16px;
        height: 16px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // Pre-select checkbox based on URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const selectedPlan = urlParams.get('plan');
    if (selectedPlan) {
        const checkbox = document.querySelector(`input[name="plan[]"][value="${selectedPlan}"]`);
        if (checkbox) {
            checkbox.checked = true;
        }
    }

    // Client-side validation for at least one checkbox
    const form = document.getElementById('contactForm');
    const planError = document.getElementById('plan-error');

    form.addEventListener('submit', (event) => {
        const checkboxes = document.querySelectorAll('input[name="plan[]"]:checked');
        if (checkboxes.length === 0) {
            event.preventDefault();
            planError.textContent = 'Please select at least one service';
        } else {
            planError.textContent = '';
        }
    });
});
</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    const submitButton = document.getElementById('submitButton');
    const msgSubmit = document.getElementById('msgSubmit');

    // Client-side validation
    form.addEventListener('submit', async (e) => {
        e.preventDefault(); // Prevent default submission to handle via JavaScript

        // Reset previous error messages
        document.querySelectorAll('.help-block.with-errors').forEach((el) => {
            el.textContent = '';
        });
        msgSubmit.classList.add('hidden');
        msgSubmit.textContent = '';

        // Validate inputs
        let isValid = true;
        const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
        inputs.forEach((input) => {
            if (!input.value.trim()) {
                const errorDiv = input.parentElement.querySelector('.help-block.with-errors');
                errorDiv.textContent = input.dataset.error || 'This field is required';
                isValid = false;
            }
        });

        // Validate email format
        const emailInput = document.getElementById('email');
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (emailInput.value && !emailRegex.test(emailInput.value)) {
            const errorDiv = emailInput.parentElement.querySelector('.help-block.with-errors');
            errorDiv.textContent = 'Please enter a valid email address';
            isValid = false;
        }

        if (!isValid) {
            msgSubmit.textContent = 'Please fill out all required fields correctly.';
            msgSubmit.classList.remove('hidden');
            return;
        }

        // Show loading state
        submitButton.disabled = true;
        submitButton.querySelector('.bx-chevron-right').style.display = 'none';
        submitButton.querySelector('.loading').style.display = 'inline';

        try {
            const formData = new FormData(form);
            const response = await fetch('/api/contact', {
                method: 'POST',
                body: formData,
            });

            if (response.redirected) {
                // Follow the redirect (e.g., to /success.html or /error.html)
                window.location.href = response.url;
            } else {
                const result = await response.json();
                msgSubmit.textContent = result.message || 'Message sent successfully!';
                msgSubmit.classList.remove('hidden');
                form.reset();
            }
        } catch (error) {
            console.error('Submission error:', error);
            msgSubmit.textContent = 'Failed to send message. Please try again.';
            msgSubmit.classList.remove('hidden');
        } finally {
            // Reset button state
            submitButton.disabled = false;
            submitButton.querySelector('.bx-chevron-right').style.display = 'inline';
            submitButton.querySelector('.loading').style.display = 'none';
        }
    });
});
</script>

